<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Student.students_login">

 <TextView
     android:id="@+id/text"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     android:text="Students Portal"
     android:textStyle="normal"
     android:textSize="24sp"
     android:layout_marginTop="32dp"
     android:textColor="@color/black"

     />

    <EditText
        android:id="@+id/students_email"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:hint="Enter Your Email"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/teal_200"

        />
    <EditText
        android:id="@+id/students_password"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:hint="Enter Your Password"
        app:layout_constraintTop_toBottomOf="@id/students_email"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/teal_200"

        />

    <TextView
        android:id="@+id/students_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/students_password"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Forgot Password"
        android:textStyle="normal"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:layout_marginRight="16dp"

        />



    <Button
        android:id="@+id/student_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/students_forgotpassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/teal_200"
        android:text="LOGIN"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/students_signup_redirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/student_login_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="New Here? Sign Up"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"

        />


</androidx.constraintlayout.widget.ConstraintLayout>